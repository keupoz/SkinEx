.header
  //background linear-gradient(alpha(black, 0.25), transparent)
  box-shadow 0 0 8px alpha(black, 0.1)
  padding 0 20px

  height 50px

  position relative
  z-index 1

  display flex
  align-items center

  .app-name
    margin-right 10px

    &::after
      content attr(data-version)

      font-size 0.7em
      opacity 0.7
      vertical-align super
