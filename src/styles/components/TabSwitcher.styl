$height = 40px

.tab-switcher
  display flex
  align-items stretch
  justify-content center
  
  &--tab
    background alpha(black, 0.1)
    border-bottom 0px solid dodgerblue
    line-height $height
    text-align center
    transition background-color, line-height, border-width
    transition-duration 100ms

    flex-grow 1

    &.selected
      border-bottom-width 5px
      line-height $height - 5px

    &:hover
      background alpha(black, 0.15)
