@keyframes loading
  from { transform: rotate(0deg) }
  to   { transform: rotate(360deg) }

.loader
  background #3f3f43
  color #d0d0d0
  font bold 2em monospace

  width 100%
  height 100%

  position fixed
  top 0
  left 0
  z-index 10

  display flex
  align-items center
  flex-direction column
  justify-content center

  &--icon
    animation 900ms linear 0s infinite loading
    border 8px solid dodgerblue
    border-left-color transparent
    border-right-color transparent
    border-radius 50%

    width 64px
    height @width

  &--message
    padding 20px

  &--error
    color tomato
